[location]
source_directories: <%= Array(@source_directories).join(' ') %>
repository: <%= @repository %>

[storage]
<%- if @passphrase -%>
encryption_passphrase: <%= @passphrase %>
<%- end -%>
compression: <%= @options['compression'] %>

[retention]
<%- unless @options['keep_within'] == :undef || ! @options['keep_within'] -%>
keep_within: <%= @options['keep_within'] %>
<%- end -%>
<%- unless @options['keep_hourly'] == :undef || ! @options['keep_hourly'] -%>
keep_hourly: <%= @options['keep_hourly'] %>
<%- end -%>
<%- unless @options['keep_daily'] == :undef || ! @options['keep_daily'] -%>
keep_daily: <%= @options['keep_daily'] %>
<%- end -%>
<%- unless @options['keep_weekly'] == :undef || ! @options['keep_weekly'] -%>
keep_weekly: <%= @options['keep_weekly'] %>
<%- end -%>
<%- unless @options['keep_monthly'] == :undef || ! @options['keep_monthly'] -%>
keep_monthly: <%= @options['keep_monthly'] %>
<%- end -%>
<%- unless @options['keep_yearly'] == :undef || ! @options['keep_yearly'] -%>
keep_yearly: <%= @options['keep_yearly'] %>
<%- end -%>
<%- unless @options['prefix'] == :undef || ! @options['prefix'] -%>
prefix: <%= @options['prefix'] %>
<%- end -%>

[consistency]
<%- unless @options['checks'] == :undef || ! @options['checks'] -%>
checks: <%= Array(@options['checks']).join(' ') %>
<%- end -%>
<%- unless @options['check_last'] == :undef || ! @options['check_last'] -%>
check_last: <%= @options['check_last'] %>
<%- end -%>
