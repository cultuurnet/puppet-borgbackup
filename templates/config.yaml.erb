location:
  source_directories:
  <%- Array(@source_directories).each do |source_dir| -%>
    - <%= source_dir %>
  <%- end -%>
  repositories:
    - <%= @repository %>
  exclude_patterns:
  <%- Array(@exclude_patterns).each do |exclude_pattern| -%>
    - '<%= exclude_pattern %>'
  <%- end -%>
storage:
<%- if @passphrase -%>
  encryption_passphrase: <%= @passphrase %>
<%- end -%>
  compression: <%= @_options['compression'] %>
retention:
<%- unless @_options['keep_within'] == :undef || ! @_options['keep_within'] -%>
  keep_within: <%= @_options['keep_within'] %>
<%- end -%>
<%- unless @_options['keep_hourly'] == :undef || ! @_options['keep_hourly'] -%>
  keep_hourly: <%= @_options['keep_hourly'] %>
<%- end -%>
<%- unless @_options['keep_daily'] == :undef || ! @_options['keep_daily'] -%>
  keep_daily: <%= @_options['keep_daily'] %>
<%- end -%>
<%- unless @_options['keep_weekly'] == :undef || ! @_options['keep_weekly'] -%>
  keep_weekly: <%= @_options['keep_weekly'] %>
<%- end -%>
<%- unless @_options['keep_monthly'] == :undef || ! @_options['keep_monthly'] -%>
  keep_monthly: <%= @_options['keep_monthly'] %>
<%- end -%>
<%- unless @_options['keep_yearly'] == :undef || ! @_options['keep_yearly'] -%>
  keep_yearly: <%= @_options['keep_yearly'] %>
<%- end -%>
<%- unless @_options['prefix'] == :undef || ! @_options['prefix'] -%>
  prefix: <%= @_options['prefix'] %>
<%- end -%>
consistency:
<%- unless @_options['checks'] == :undef || ! @_options['checks'] -%>
  checks:
  <%- Array(@_options['checks']).each do |check| -%>
    - <%= check %>
  <%- end -%>
<%- end -%>
<%- unless @_options['check_last'] == :undef || ! @_options['check_last'] -%>
  check_last: <%= @_options['check_last'] %>
<%- end -%>
